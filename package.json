{
  "name": "git-commits",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "main": "src/index.tsx",
  "dependencies": {
    "react": "^16.8.6",
    "react-debounce-input": "^3.2.0",
    "react-dom": "16.8.6",
    "react-scripts": "3.0.1",
    "react-select": "^2.4.3",
    "react-table": "^6.10.0",
    "unstated": "^2.1.1"
  },
  "devDependencies": {
    "@olavoparno/jest-badges-readme": "^1.3.4",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/react": "^16.8.17",
    "@types/react-dom": "^16.8.4",
    "@types/react-select": "^2.0.18",
    "@types/react-table": "^6.8.1",
    "node-sass": "^4.12.0",
    "prettier": "1.17.1",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "prebuild": "rimraf build && echo nok > .buildstatus",
    "postbuild": "npm run test && echo ok > .buildstatus && npm run docs",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom --watchAll --coverage",
    "eject": "react-scripts eject",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "docs": "npm run make-badges && typedoc --out docs --target es6 --readme README.md --theme minimal --mode file src",
    "build-badges": "node_modules/.bin/jest-badges-readme",
    "make-badges": "npm run build-badges"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  }
}
